  .col-md-12
    .page-header
      %h2.text-center
        = project.name
        %p
          by
          = project.owner.name
.row
  .col-md-8
    %img{src: 'http://dummyimage.com/600x400/237d00/ffffff', alt: project.name}
    .project_description
