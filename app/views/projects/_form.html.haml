.row
  .col-md-12
    = simple_form_for project do |f|
      .form-inputs
        = f.input :name
        = f.input :tag_list
        = f.input :description, class: 'form-control'
        .form-group
          - if project.photo?
            %label Current photo
            =image_tag project.photo.url(:thumb)
          - else
            %label Add photo
            = f.file_field :photo
      .form-actions
        = f.submit 'Save', class: 'btn btn-default btn-block'
        %br
        = link_to "Back", :back, class: 'btn btn-info'
