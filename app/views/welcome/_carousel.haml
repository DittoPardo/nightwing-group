.carousel.slide{ id: "slide-images", data: { ride: "carousel" }}
  %ol.carousel-indicators
    %li.active{ data: { target: "#slide-images", slide_to: "0" }}
    %li{ data: { target: "#slide-images", slide_to: "1" }}
    %li{ data: { target: "#slide-images", slide1_to: "2" }}

  .carousel-inner.text-center
    .item.active
      .fill{ style: "background-image: url(#{image_path 'pexels1.jpg'})"}
      .carousel-caption
        %h1 Raise funds and pursue your ideas
        = link_to "Create project", new_project_path, class: 'btn btn-success'
    .item
      .fill{ style: "background-image: url(#{image_path 'pexels2.jpg'})"}
      .carousel-caption
        %h1 Back interesting projects
        = link_to "Discover projects", projects_path, class: 'btn btn-success'
    .item
      .fill{ style: "background-image: url(#{image_path 'pexels3.jpg'})"}
      .carousel-caption
        %h1 Be a part of the greatest community!
        = link_to "Sign up", new_user_registration_path, class: 'btn btn-success'

  %a.left.carousel-control{ href: "#slide-images", role: "button", data: { slide: "prev"}}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous

  %a.right.carousel-control{ href: "#slide-images", role: "button", data: { slide: "next" }}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
